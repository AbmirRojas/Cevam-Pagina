    <div class="modal" id="evaluationModal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Agregar Nueva Evaluación</h3>
                <button class="modal-close">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="evaluationTitle">Título de la Evaluación *</label>
                    <input type="text" id="evaluationTitle" class="form-control" placeholder="Ej: Quiz de Verbos Irregulares">
                </div>
                
                <div class="form-group">
                    <label>Tipo de Evaluación *</label>
                    <div class="evaluation-options">
                        <div class="evaluation-option" data-type="quiz">
                            <i class="fas fa-question-circle"></i>
                            <div class="evaluation-option-title">Quiz</div>
                            <div class="evaluation-option-desc">Preguntas cortas para evaluar conocimientos específicos</div>
                        </div>
                        <div class="evaluation-option" data-type="exam">
                            <i class="fas fa-file-alt"></i>
                            <div class="evaluation-option-title">Examen</div>
                            <div class="evaluation-option-desc">Evaluación formal que cubre varios temas</div>
                        </div>
                        <div class="evaluation-option" data-type="exercise">
                            <i class="fas fa-pen"></i>
                            <div class="evaluation-option-title">Ejercicio</div>
                            <div class="evaluation-option-desc">Actividad práctica para aplicar conocimientos</div>
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="evaluationDescription">Descripción</label>
                    <textarea id="evaluationDescription" class="form-control" placeholder="Describe la evaluación..." rows="3"></textarea>
                </div>
                
                <div id="quizQuestionsSection" style="display: none;">
                    <div class="form-group">
                        <label>Preguntas</label>
                        <div class="question-container">
                            <div class="question-header">
                                <h5 class="question-title">Pregunta 1</h5>
                                <div class="question-actions">
                                    <button class="question-action">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                    <button class="question-action delete">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Texto de la pregunta">
                            </div>
                            <div class="form-group">
                                <label>Opciones</label>
                                <div class="option-item">
                                    <input type="radio" class="option-checkbox" name="option1">
                                    <input type="text" class="form-control option-input" placeholder="Opción 1">
                                </div>
                                <div class="option-item">
                                    <input type="radio" class="option-checkbox" name="option1">
                                    <input type="text" class="form-control option-input" placeholder="Opción 2">
                                </div>
                                <div class="option-item">
                                    <input type="radio" class="option-checkbox" name="option1">
                                    <input type="text" class="form-control option-input" placeholder="Opción 3">
                                </div>
                                <button class="add-option">
                                    <i class="fas fa-plus"></i> Agregar opción
                                </button>
                            </div>
                        </div>
                        
                        <button class="btn-icon" id="addQuestionBtn">
                            <i class="fas fa-plus me-2"></i> Agregar otra pregunta
                        </button>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-secondary" id="cancelEvaluationBtn">Cancelar</button>
                <button class="btn-success" id="saveEvaluationBtn">Guardar Evaluación</button>
            </div>
